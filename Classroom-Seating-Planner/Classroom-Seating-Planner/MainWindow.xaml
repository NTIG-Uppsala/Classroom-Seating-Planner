<Window x:Class="Classroom_Seating_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classroom_Seating_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="8cm" MinHeight="10cm">
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" MinWidth="5cm"/>
            <ColumnDefinition Width="330*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="BorderRight" BorderBrush="#FF8F8F8F" BorderThickness="1" Width="1" HorizontalAlignment="Right"/>
        <Label x:Name="LabelStudents" Content="Elever" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ListBox x:Name="ListBoxStudentList" d:ItemsSource="{d:SampleData ItemCount=32}" Margin="0,27,0,40"/>
        <Button x:Name="ButtonRandomizeSeating" Content="Slumpa bordsplacering" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="20" Width="126" Margin="0,0,0,10" Click="ButtonRandomizeSeating_Click"/>

        <Grid x:Name="GridTables" Grid.Column="1" Margin="15,15,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="1cm"/>
                <RowDefinition Height="2cm"/>
                <RowDefinition Height="2cm"/>
                <RowDefinition Height="2cm"/>
                <RowDefinition Height="2cm"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="LabelWhiteboard" Grid.ColumnSpan="5" Content="Tavlan" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- Tables you sit at -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="2,2,2,2">
                <Border BorderBrush="Black" BorderThickness="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
